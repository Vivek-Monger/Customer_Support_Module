<odoo>
  <template id="portal_customer_reporting" name="Customer Reporting Dashboard">
    <t t-call="portal.portal_layout">
      
      <!-- Breadcrumbs -->
      <t t-set="breadcrumbs" t-value="[
        ('/my', 'My Account'),
        ('/my/tickets/reporting', 'Customer Support / Reporting')
      ]"/>

      <div class="container mt-4">
        <h2>Reporting Dashboard</h2>

        <p class="text-muted">Visual representation of your tickets by status and priority.</p>

        <!-- Tabs for graphs -->
        <ul class="nav nav-tabs mb-3">
          <li class="nav-item">
            <a class="nav-link active" href="/my/tickets/reporting/bar">Bar Graph</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/my/tickets/reporting/pie">Pie Chart</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/my/tickets/reporting/line">Line Graph</a>
          </li>
        </ul>

        <!-- Graph container -->
        <div id="reporting_chart">
          <t t-raw="chart_html"/>
        </div>
      </div>

    </t>
  </template>
</odoo>
