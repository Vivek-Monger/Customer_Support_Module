<odoo>
    <record id="customer_support_delete_confirm_form" model="ir.ui.view">
        <field name="name">customer.support.delete.confirm.form</field>
        <field name="model">customer.support.delete.confirm</field>
        <field name="arch" type="xml">
            <form string="Confirm Deletion">
                <group>
                    <div class="o_form_label">Are you sure you want to delete this To-Do item?</div>
                    <field name="todo_id" invisible="1"/>
                </group>
                <footer>
                    <button name="action_confirm_delete" string="Yes, Delete" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
