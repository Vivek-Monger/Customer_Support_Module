<odoo>
    <data>
        <!-- List View-->
      <record id="project_list" model="ir.ui.view">
        <field name="name">project.list</field>
        <field name="model">customer.project</field>
        <field name="arch" type="xml">
          <list string="All Project" class="project-list">
            <field name = "project"/>
            <field name = "description"/>
          </list>
        </field>
      </record>

    <!-- Form View -->
    <record id="project_form_view" model="ir.ui.view">
          <field name="name">project.form.view</field>
          <field name="model">customer.project</field>
          <field name="arch" type="xml">
              <form string="Project" class="project_form">
                  <sheet>
                      <group>
                          <field name="project"/>
                          <field name="description"/>
                      </group>
                  </sheet>
              </form>
          </field>
      </record>

      <!-- Actions-->
       <record id="action_project" model="ir.actions.act_window">
            <field name="name">Projects</field>
            <field name="res_model">customer.project</field>
            <field name="view_mode">list,form</field>
        </record>

        <!-- Submenu for Project under existing root menu -->
        <menuitem id="menu_project"
                  name="Projects"
                  parent="menu_customer_support_root"
                  action="action_project"
                  sequence="10"
                  groups="customer_support_module.group_admin"/>

    </data>
</odoo>