<odoo>

    <!-- Dashboard Form View -->
    <record id="view_customer_support_overview_form" model="ir.ui.view">
        <field name="name">customer.support.overview.form</field>
        <field name="model">customer.support.overview</field>
        <field name="arch" type="xml">
            <form string="Support Overview Dashboard">
                <sheet>

                    <group string="Ticket Analytics" col="4">
                        <field name="open_tickets" readonly="1"/>
                        <field name="total_tickets" readonly="1"/>
                        <field name="high_priority" readonly="1"/>
                        <field name="urgent_tickets" readonly="1"/>

                        <field name="avg_open_hours" readonly="1"/>
                        <field name="total_hours" readonly="1"/>
                        <field name="avg_high_priority_hours" readonly="1"/>
                        <field name="avg_urgent_hours" readonly="1"/>

                        <field name="failed_tickets" readonly="1"/>
                        <field name="failed_rate" readonly="1"/>
                        <field name="high_priority_failed" readonly="1"/>
                        <field name="urgent_failed" readonly="1"/>
                    </group>

                    <group string="My Performance" col="2">
                        <field name="today_closed" readonly="1"/>
                        <field name="sla_last_7_days" readonly="1"/>
                        <field name="daily_target" readonly="1"/>
                        <field name="sample_rate" readonly="1"/>
                    </group>

                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_customer_support_overview" model="ir.actions.act_window">
        <field name="name">Overview Dashboard</field>
        <field name="res_model">customer.support.overview</field>
        <field name="view_mode">form</field>
        <field name="target">current</field>
    </record>

    <menuitem
    id="menu_customer_support_overview"
    name="Overview"
    parent="menu_customer_support_root"
    action="action_customer_support_overview"
    sequence="70"/>

</odoo>
