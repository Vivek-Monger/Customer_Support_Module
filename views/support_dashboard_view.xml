<odoo>
    <!-- Dashboard Form View -->
    <record id="view_customer_support_dashboard_form" model="ir.ui.view">
        <field name="name">customer.support.dashboard.form</field>
        <field name="model">customer.support.dashboard</field>
        <field name="arch" type="xml">
            <form string="Support Dashboard" create="false" edit="false" delete="false">
                <sheet>
                    <!-- Ticket Counters -->
                    <group col="3">
                        <field name="unassigned_count" readonly="1"/>
                        <field name="assigned_count" readonly="1"/>
                        <field name="today_count" readonly="1"/>
                    </group>

                    <separator string="Latest Tickets"/>

                    <!-- Latest Tickets Tree -->
                    <field name="ticket_ids" nolabel="1">
                        <list>
                            <field name="ticket_id"/>
                            <field name="subject"/>
                            <field name="priority"/>
                            <field name="phase_id"/>
                            <field name="assigned_user_id"/>
                        </list>
                    </field>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Dashboard Action -->
    <record id="action_customer_support_dashboard" model="ir.actions.act_window">
        <field name="name">Support Dashboard</field>
        <field name="res_model">customer.support.dashboard</field>
        <field name="view_mode">form</field>
        <field name="target">current</field>
        <!-- âš  No res_id needed for TransientModel -->
    </record>

    <!-- Dashboard Menu -->
    <menuitem
        id="menu_customer_support_dashboard"
        name="Dashboard"
        parent="menu_customer_support_root"
        action="action_customer_support_dashboard"
        sequence="1"/>
</odoo>
